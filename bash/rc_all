# Cause Homebrew is awesome..
export PATH=$PATH:/usr/local/share/npm/bin
export PATH=$PATH:$HOME/.npm-packages/bin
# Remove this whenever https://github.com/mxcl/homebrew/issues/14123
# is properly resolved, I guess...
export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:/opt/X11/lib/pkgconfig
# Again with the Homebrew (this time for gpg2)..
export PATH=$PATH:/usr/local/sbin
# Local bin
export PATH=$PATH:$HOME/local/bin
# Setup related environment variables..
export CDATA_REPOSITORIES="$HOME/repositories"
export CDATA_SETUP="$CDATA_REPOSITORIES/setup"
